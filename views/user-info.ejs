<%- include('partials/staff-header.ejs') %>
    
<div class="content-view-section">
  <div class="search-section">
    <form action="/searchReader" method="post">
      <label for="">User-id: </label>
      <input type="text" placeholder="Enter the id" class="search-content" name="readerId">
      <label for="">User-name: </label>
      <input type="text" placeholder="Enter the name" class="search-content" name="readerName">
      <label for="">Address: </label>
      <input type="text" placeholder="Enter the adress" class="search-content" name="readerAddress">
      <button type="submit" class="btn btn-warning " class="search-conent-btn">Search</button>
    </form>


  </div>
    <div class="content-box">
       
        <table>
            <% if(locals.userData!=""){ %>
                <tr>
                    <th>User_id</th>
                    <th>Name</th>
                    <th>Email-id</th>
                    <th>Contact No</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            <% userData.forEach(data => { %> 
              <tr>
                <td><%= data.user_id %></td>
                <td><%=data.name %></td>
                <td><%=data.email %></td>
                <td><%=data.phone %></td>
                <td><%=data.address %></td>
                <td>
                    <!-- <form action="/editUser" method="post" style="display: inline-block;">
                    <button type="submit" class="btn btn-warning" name="edit" value="<%= data.user_id %>">Edit</button>&nbsp;
                    </form> -->
                    <form action="/deleteUser" method="post"  style="display: inline-block;">
                    <button type="submit" class="btn btn-success" name="deleteReader" value="<%= data.user_id %>">delete</button>
                    </form>
                </td>
              </tr>
            <%})%>               
            <% }else{ %>
              <h2 style="text-align: center;">No records found</h2>
            <% } %>
        </table>
   
    </div>
    </div>

<%- include('partials/home-footer.ejs') %>