<%- include('partials/author-header.ejs') %>
<% if(locals.triggerMsg){ %>
  <div id="trigger-msg-author">
    <h4 ><%=triggerMsg %></h4>
  </div>
  <% } %>
    
<div class="content-view-section">
<div class="row profile-box">
    <div class="col-lg-6">
        <div class="insert-box" >
            <form action="/insertBookFromAuthor" method="post">
            <h2 class="insert-record-header">Add Book</h2>
            <p class="labelForinsert">Book-Name</p>
            <input type="text" name="bookName" class="insertNew">
            <p class="labelForinsert">Price </p>
            <input type="text" name="bookPrice"class="insertNew" >
            <button type="submit" class="btn btn-warning insert-btn">Add</button>
            </form>
         </div>  
    </div>

   <div class="col-lg-6 author-publication-details">
    <h4 style="text-align: center; margin-left:80px">My Publications</h4><br>
    <table >
        <% if(locals.authData!=""){ %>
            <tr>
                <th>Book_id</th>
                <th>Book_title</th>
                <th>Price</th>
            </tr>
        <% authData.forEach(data => { %> 
          <tr>
            <td><%= data.book_id %></td>
            <td><%=data.title %></td>
            <td><%=data.price %></td>
          </tr>
        <%})%>               
        <% }else{ %>
          <h2 style="text-align: center;">No records found</h2>
        <% } %>
    </table>
    </div>

</div>
</div>

<script>
  setTimeout(function() {
 $("#trigger-msg-author").remove();
}, 2000);
</script>





