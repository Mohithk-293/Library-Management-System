<%- include('partials/staff-header.ejs') %>
    
<div class="content-view-section" style="padding:175px 350px">
    <div class="content-box reader-content" >
       <h3 style="text-align: center;">Requests Made</h3><br>
        <table >
            <% if(locals.issuedBooksData!=""){ %>
                <tr>
                    <th>Book-Name</th>
                    <th>Reader-Name</th>
                    <th>Action</th>
                </tr>
            <% issuedBooksData.forEach(data => { %> 
              <tr>
                <td><%=data.book_title %></td>
                <td><%=data.reader_name %></td>
                <td>
                    <form action="/issueBook" method="post" style="display: inline-block;">
                    <button type="submit" class="btn btn-warning" name="issueBook" value="<%= data.id %>">Issue</button>&nbsp;
                    </form>
                </td>
              </tr>
            <%})%>               
            <% }else{ %>
              <h2 style="text-align: center;">No requests are pending</h2>
            <% } %>
        </table>
   
    </div>
    </div>
    

<%- include('partials/home-footer.ejs') %>